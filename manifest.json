{
  "manifest_version": 3,
  "name": "WatchLater+",
  "version": "1.0",
  "description": "Bookmark specific timestamps in YouTube videos and jump to them later.",
  "permissions": ["tabs", "activeTab", "storage", "scripting"],
  "host_permissions": ["*://www.youtube.com/*"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}